@model PagedList.IPagedList<Models.EF.User>
@using PagedList.Mvc;
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "Account";
    var admin = Session["Admin"] as Models.EF.User;
}
@section username{
    @admin.Name
}
@section username_dropdown{
    @admin.Name
}
@section email{
    @admin.Email
}

<div class="content">
    <div class="container-fluid"> 
        @foreach (var item in Model)
        {
            //Bảng thông tin khách hàng
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Chỉnh sửa thông tin</h4>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="row">
                                    <div class="col-md-5 pr-1">
                                        <div class="form-group">
                                            <label>Họ và tên</label>
                                            <input type="text" class="form-control" disabled="" placeholder="Company" value="@item.Name" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-3 px-1">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" class="form-control" placeholder="Username" value="@item.Email" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-4 pl-1">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Số điện thoại</label>
                                            <input type="email" class="form-control" placeholder="Email" value="@item.Mobile" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 pr-1">
                                        <div class="form-group">
                                            <label>Tên  đăng nhập</label> 
                                            <input type="text" class="form-control" placeholder="Firstname" value="@item.Username" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-6 pl-1">
                                        <div class="form-group">
                                            <label>Mật khẩu</label>
                                            <input type="text" class="form-control" placeholder="Lastname" value="@item.Password" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Địa chỉ</label>
                                            <input type="text" class="form-control" placeholder="Địa chỉ" value="@item.Address" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 pr-1">
                                        <div class="form-group">
                                            <label>Sinh nhật</label>
                                            <input type="text" class="form-control" placeholder="Birthday" value="@item.BirthDay" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-4 px-1">
                                        <div class="form-group">
                                            <label>Ngày đăng ký</label>
                                            <input type="text" class="form-control" placeholder="Số điện thoại" value="@item.CreatedDate" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-4 pl-1">
                                        <div class="form-group">
                                            <label>Trạng thái</label>
                                            <input type="number" class="form-control" placeholder="Trạng thái" value="@item.Status" readonly>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-info btn-fill pull-right">Cập nhật</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-user">
                        <div class="card-image">
                            <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="...">
                        </div>
                        <div class="card-body">
                            <div class="author">
                                <a href="#">
                                    <img class="avatar border-gray" src="~/Assets/images/icon/avatar-04.jpg" alt="...">
                                    <h5 class="title">@item.Name </h5>
                                </a>
                                <p class="description">
                                    @item.Email
                                </p>
                            </div>
                            <p class="description text-center">
                                "Lamborghini Mercy
                                <br> Your chick she so thirsty
                                <br> I'm in that two seat Lambo"
                            </p>
                        </div>

                    </div>
                </div>
            </div>
            
        }
        @Html.PagedListPager(Model, page => Url.Action("MemberAccount", new { page, @searchString = @ViewBag.SearchString }))
    </div>
</div>


