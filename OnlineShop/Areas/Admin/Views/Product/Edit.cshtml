@model Models.EF.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var admin = Session["Admin"] as Models.EF.User;
}
@section username{
    @admin.Name
}
@section username_dropdown{
    @admin.Name
}
@section email{
    @admin.Email
}
<h2 class="col-lg-12" style="font-family:Arial, Helvetica, sans-serif;">Chỉnh sửa sản phẩm</h2>
@using (Html.BeginForm("Edit", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group col-lg-12">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Tên sản phẩm</label>
            <div class="input-group col">
                <div style="width:100% ">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = Model.Name })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger"})
                </div>
            </div>
        </div>


        <div class="form-group row">
            <label class="col-md-2 col-form-label">Link sản phẩm</label>
            <div class="input-group col">
                <div style="width:100% ">
                    @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control" , @placeholder = "Model.MetaTitle"})
                    @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group row">
            <label class="col-md-2 col-form-label">Mô tả chi tiết</label>
            <div class="input-group col">
                <div style="width:100% ">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Model.Description"})
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Mô tả chung</label>
            <div class="input-group col">
                <div style="width:100% ">
                    @Html.TextBoxFor(model => model.MetaDescription, new { @class = "form-control", @placeholder = "Model.MetaDescription"})
                    @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Ảnh sản phẩm</label>
            <div class="input-group col">
                <div class="row col">
                    @Html.TextBoxFor(model => model.ImageFirst, new { @class = "form-control", @placeholder = "Model.ImageFirst"})
                    @Html.ValidationMessageFor(model => model.ImageFirst, "", new { @class = "text-danger" })
                </div>
                <div class="row col">
                    @Html.TextBoxFor(model => model.ImageSecond, new { @class = "form-control", @placeholder = "Model.ImageSecond" })
                    @Html.ValidationMessageFor(model => model.ImageSecond, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Giá bán</label>
            <div class="col">
                <div class="input-group">
                    <div class="row col">
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @placeholder = "Model.Price" })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                    <div class="row col">
                        @Html.TextBoxFor(model => model.PercentSale, new { @class = "form-control", @placeholder = "Model.PercentSale"})
                        @Html.ValidationMessageFor(model => model.PercentSale, "", new { @class = "text-danger" })
                    </div>
                    <div class="list-group-item">
                        <div class="checkbox">
                            @Html.CheckBoxFor(model => model.Promotion, new {@checked = Model.Promotion }) Khuyến mãi
                            @Html.ValidationMessageFor(model => model.Promotion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-2 col-form-label">Dòng sản phẩm</label>
            <div class="col">
                <div class="input-group">
                    <div class="row col">
                        @Html.TextBoxFor(model => model.CategoryIDParent, new { @class = "form-control", @placeholder = "Model.CategoryIDParent" })
                        @Html.ValidationMessageFor(model => model.CategoryIDParent, "", new { @class = "text-danger" })
                    </div>
                    <div class="row col">
                        @Html.TextBoxFor(model => model.CategoryIDChild, new { @class = "form-control", @placeholder = "Model.CategoryIDChild" })
                        @Html.ValidationMessageFor(model => model.CategoryIDChild, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group row">

            <div class="col">
                <div class="input-group">
                    <div class="row col">
                        @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control", @placeholder = "Model.CreatedDate" })
                        @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="row col">
                        @Html.TextBoxFor(model => model.Quanity, new { @class = "form-control", @placeholder ="Model.Quanity" })
                        @Html.ValidationMessageFor(model => model.Quanity, "", new { @class = "text-danger" })
                    </div>
                    <div class="row col">
                        @Html.TextBoxFor(model => model.Status, new { @class = "form-control", @placeholder = "Model.Status" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group row">

            <div class="col">
                <div class="input-group">
                    <div class="row col">
                        @Html.TextBoxFor(model => model.BuyCount, new { @class = "form-control", @placeholder = "Model.BuyCount" })
                        @Html.ValidationMessageFor(model => model.BuyCount, "", new { @class = "text-danger" })
                    </div>
                    <div class="row col">
                        @Html.TextBoxFor(model => model.ViewCount, new { @class = "form-control", @placeholder = "Model.ViewCount" })
                        @Html.ValidationMessageFor(model => model.ViewCount, "", new { @class = "text-danger" })
                    </div>
                    <div class="row col">
                        @Html.TextBoxFor(model => model.ReviewPoint, new { @class = "form-control", @placeholder = "Model.ReviewPoint"})
                        @Html.ValidationMessageFor(model => model.ReviewPoint, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-info btn-fill pull-right  m-r-10">Cập nhật</button>
}

<button type="button" class="btn btn-info btn-fill pull-left m-l-10">
    <span style="color:white;">
        @Html.ActionLink("Quay về", "Index", "Product", new { style = "color: white" })
    </span>
</button>


