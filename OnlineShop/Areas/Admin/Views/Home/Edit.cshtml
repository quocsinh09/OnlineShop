@model Models.EF.User
@{
    ViewBag.Title = "Chỉnh sửa tài khoản";
    Layout = "../Shared/_Layout.cshtml";
}

<h3 class="col-lg-12" style="font-family:Arial, Helvetica, sans-serif">Chỉnh sửa thông tin </h3>

@using (Html.BeginForm("Edit", null, FormMethod.Post))
{
    <input type="hidden" name="ID" value="@Model.ID" />
    @Html.AntiForgeryToken()
    
    <div class="form-group col-lg-12">
        <hr/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="card-body form-control">
                    
           
            <div class="form-group row">
                <label class="col-md-12 col-form-label">Họ và tên</label>
                <div class="col">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = Model.Name })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-12 col-form-label">Email</label>
                <div class="input-group col">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = Model.Email, type = "email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-12 col-form-label">Số điện thoại</label>
                <div class="input-group col">
                    @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", @placeholder = Model.Mobile })
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-12 col-form-label">Sinh nhật</label>
                <div class="input-group col">
                    @Html.TextBoxFor(model => model.BirthDay, new { @class = "form-control",  @type = "date" })
                    @Html.ValidationMessageFor(model => model.BirthDay, "", new { @class = "text-danger" })
                </div>
            </div>
               
            <div class="form-group row">
                <label class="col-md-12 col-form-label">Địa chỉ</label>
                <div class="input-group col">
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @type = "date" })
                    @Html.ValidationMessageFor(model => model.BirthDay, "", new { @class = "text-danger" })
                    <input class="form-control" placeholder="12345 My Street" type="email">
                </div>
            </div>
            <div class="form-group row">
                <div class="input-group col offset-md-12">
                    <div class="input-group-prepend">
                        <span class="input-group-text">City</span>
                    </div>
                    <input class="form-control" placeholder="City Name">
                </div>
            </div>
            <div class="form-group row">
                <div class="input-group col offset-md-12">
                    <div class="input-group-prepend">
                        <span class="input-group-text">State</span>
                    </div>
                    <input class="form-control" placeholder="NY">
                </div>
                <div class="input-group col">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Zip</span>
                    </div>
                    <input class="form-control" placeholder="00000">
                </div>
            </div>
            <div class="form-group row">
                <div class="input-group col offset-md-12">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Country</span>
                    </div>
                    <input class="form-control" placeholder="United States">
                </div>
            </div>
            

